{  
    "version": "0.1.0",  
    "command": "cmd" ,  
    "args": ["/c"],
    "isShellCommand": true, 
    "showOutput": "always",  
    "suppressTaskName": true,
    "tasks" : [
        {
            "taskName": "pyflakes",
            "args": ["pyflakes", "${file}"]
        },
        {
            "taskName": "makercc",
            "args": ["pyrcc5.exe", "main.qrc", "-o", "qml_rc.py"]
        },
        {
            "taskName": "makeui",
            "args": ["pyuic5.exe", "mainwindow.ui", "-o", "mainwindow_ui.py"],
            "isBuildCommand": true
        } 
    ]
}